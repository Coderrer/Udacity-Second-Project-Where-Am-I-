                style="@style/ImageViewLayout"
                android:contentDescription="@null"
                android:src="@drawable/brazil" />

            <TextView
                style="@style/TitleText"
                android:text="@string/brazil_title" />

            <TextView
                style="@style/InfoText"
                android:text="@string/brazil_info" />

            <TextView
                style="@style/QuestionText"
                android:text="@string/brazil_question" />

            <CheckBox
                android:id="@+id/brazil_checkbox_1"
                style="@style/CheckBox"
                android:text="@string/brazil_checkbox_1" />

            <CheckBox
                android:id="@+id/brazil_checkbox_2"
                style="@style/CheckBox"
                android:text="@string/brazil_checkbox_2" />

            <CheckBox
                android:id="@+id/brazil_checkbox_3"
                style="@style/CheckBox"
                android:text="@string/brazil_checkbox_3" />

            <CheckBox
                android:id="@+id/brazil_checkbox_4"
                style="@style/CheckBox"
                android:layout_marginBottom="16dp"
                android:text="@string/brazil_checkbox_4" />

        </LinearLayout>

        <!-- This is the London section. -->


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:orientation="vertical">

        <!-- This is the India section. -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                style="@style/ImageViewLayout"
                android:contentDescription="@null"
                android:src="@drawable/india" />

            <TextView
                style="@style/TitleText"
                android:text="@string/india_title" />

            <TextView
                style="@style/InfoText"
                android:text="@string/india_info" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

                <TextView
                    style="@style/QuestionText"
                    android:text="@string/india_question"
                    tools:targetApi="jelly_bean" />

                <RadioButton
                    android:id="@+id/india_radio_1"
                    style="@style/RadioButton"
                    android:text="@string/india_radio_1"
                    tools:targetApi="jelly_bean" />

                <RadioButton
                    android:id="@+id/india_radio_2"
                    style="@style/RadioButton"
                    android:text="@string/india_radio_2"
                    tools:targetApi="jelly_bean" />

                <RadioButton
                    android:id="@+id/india_radio_3"
                    style="@style/RadioButton"
                    android:text="@string/india_radio_3"
                    tools:targetApi="jelly_bean" />

            </RadioGroup>

        </LinearLayout>

        <!-- This is the Brazil section. -->

